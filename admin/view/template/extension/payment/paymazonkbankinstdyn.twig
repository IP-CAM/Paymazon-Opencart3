{{ header }}{{ column_left }}
<div id="content">
<!--header, breadcrumb & button-->
<div class="page-header">
	<div class="container-fluid">
		<div class="pull-right">
			<button type="submit" form="form-paymazon-kbank-inst" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
			<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
		</div>
		<h1>{{ heading_title }}</h1>
		<ul class="breadcrumb">
			{% for breadcrumb in breadcrumbs %}
				<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
			{% endfor %}
		</ul>
	</div>
</div>
<!--header, breadcrumb & button-->

<div class="container-fluid">
	<!--error-->
	{% if error_warning %}
		<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> 
			{{ error_warning }}
			<button type="button" class="close" data-dismiss="alert">&times;</button>
		</div>
	{% endif %}
   <!--error-->
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
		</div>
		<div class="panel-body">
			<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-paymazon-kbank-inst" class="form-horizontal">
				<!-- Status -->
				<div class="form-group">
					<label class="col-sm-2 control-label" for="input-paymazonkbankinst-status"> {{ entry_status }} </label>
					<div class="col-sm-3">
						<select name="payment_paymazonkbankinstdyn_status" id="input-paymazonkbankinst-status" class="form-control">
							{% if payment_paymazonkbankinstdyn_status %}
								<option value="1" selected="selected">{{ text_enabled }}</option>
								<option value="0">{{ text_disabled }}</option>
							{% else %}
								<option value="1">{{ text_enabled }}</option>
								<option value="0" selected="selected">{{ text_disabled }}</option>
							{% endif %}
						</select>
					</div>
				</div>
				<!-- Display name -->
				<div class="form-group required sensitive">
					<label class="col-sm-2 control-label" for="input-display-name">{{ entry_display_name }}</label>
					<div class="col-sm-3">
						<input type="text" name="payment_paymazonkbankinstdyn_display_name" value="{{ payment_paymazonkbankinstdyn_display_name }}" placeholder="{{ payment_paymazonkbankinstdyn_display_name }}" id="input-display-name" class="form-control" />
					</div>
					<div class="col-sm-3">
						{% if error_display_name %}
							<div class="col-sm-3"> {{ error_display_name }} </div>
						{% endif %}
					</div>
				</div>
				<!-- Min. Total -->
				<div class="form-group required sensitive">
					<label class="col-sm-2 control-label" for="input-minimum-total">{{ entry_minimum_total }}</label>
					<div class="col-sm-3">
						<input type="text" name="payment_paymazonkbankinstdyn_minimum_total" value="{{ payment_paymazonkbankinstdyn_minimum_total }}" placeholder="{{ payment_paymazonkbankinstdyn_minimum_total }}" id="input-minimum-total" class="form-control" />
					</div>
					<div class="col-sm-3">
						{% if error_minimum_total %}
							<div class="col-sm-3"> {{ error_minimum_total }} </div>
						{% endif %}
					</div>
				</div>
				<!-- Environment -->
				<div class="form-group sensitive required">
					<label class="col-sm-2 control-label" for="input-mode">{{ entry_environment }}</label>
					<div class="col-sm-3">
						<select name="payment_paymazonkbankinstdyn_environment" id="input-mode" class="form-control">
							{% if payment_paymazonkbankinstdyn_environment == 'sandbox' %}
								<option value="sandbox" selected="selected">{{ text_sandbox }}</option>
							{% else %}
								<option value="sandbox">{{ text_sandbox }}</option>
							{% endif %}
							{% if payment_paymazonkbankinstdyn_environment == 'live' %}
								<option value="live" selected="selected">{{ text_live }}</option>
							{% else %}
								<option value="live">{{ text_live }}</option>
							{% endif %}
						</select>
					</div>
					<div class="col-sm-3">
						{% if error_environment %}
							<div class="col-sm-3"> {{ error_environment }} </div>
						{% endif %}
					</div>
				</div>
				<!-- Order Status -->
				<div class="form-group">
					<label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status }}</label>
					<div class="col-sm-3">
						<select name="payment_paymazonkbankinstdyn_order_status_id" id="input-order-status" class="form-control">
							{% for order_status in order_statuses %}
								{% if order_status.order_status_id == payment_paymazonkbankinst_order_status_id %}
									<option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
								{% else %}
									<option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
								{% endif %}
							{% endfor %}
						</select>
					</div>
					<div class="col-sm-3">
						{% if error_order_status_id %}
							<div class="col-sm-3"> {{ error_order_status_id }} </div>
						{% endif %}
					</div>
				</div>
				<!-- Merchant Id -->
				<div class="form-group required sensitive">
					<label class="col-sm-2 control-label" for="input-merchant-id">{{ entry_merchant_id }}</label>
					<div class="col-sm-3">
						<input type="text" name="payment_paymazonkbankinstdyn_merchant_id" value="{{ payment_paymazonkbankinstdyn_merchant_id }}" placeholder="{{ payment_paymazonkbankinstdyn_merchant_id }}" id="input-merchant-id" class="form-control" />
					</div>
					<div class="col-sm-3">
						{% if error_merchant_id %}
							<div class="col-sm-3"> {{error_merchant_id}} </div>
						{% endif %}
					</div>
				</div>
				<!-- Shared Key -->
				<div class="form-group required sensitive">
					<label class="col-sm-2 control-label" for="input-shared-key">{{ entry_shared_key }}</label>
					<div class="col-sm-3">
						<input type="text" name="payment_paymazonkbankinstdyn_shared_key" value="{{ payment_paymazonkbankinstdyn_shared_key }}" placeholder="{{ payment_paymazonkbankinstdyn_shared_key }}" id="input-shared-key" class="form-control" />
					</div>
					<div class="col-sm-3">
						{% if error_shared_key %}
							<div class="col-sm-3"> {{error_shared_key}} </div>
						{% endif %}
					</div>
				</div>
				<!-- Shared Key -->
				<div class="form-group required sensitive">
					<label class="col-sm-2 control-label" for="input-shop-id">{{ entry_shop_id }}</label>
					<div class="col-sm-3">
						<input type="text" name="payment_paymazonkbankinstdyn_shopid" value="{{ payment_paymazonkbankinstdyn_shopid }}" placeholder="{{ payment_paymazonkbankinstdyn_shopid }}" id="input-shop-id" class="form-control" />
					</div>
					<div class="col-sm-3">
						{% if error_shop_id %}
							<div class="col-sm-3"> {{error_shop_id}} </div>
						{% endif %}
					</div>
				</div>
				<!-- Installment Shop IDs -->
				{% for key, shopid in shopids %}
					<div class="form-group v2_settings sensitive required">
						<div class="col-sm-2 control-label">Shop </div>
						<input type="hidden" name="payment_paymazonkbankinstdyn_installment_shopids[{{ key }}][value]" placeholder="value of shopid"  value="{{ shopid.value }}" id="input-shopids{{ key }}-value" class="form-control" />
						<input type="hidden" name="payment_paymazonkbankinstdyn_installment_shopids[{{ key }}][text]" placeholder="text of shopid"  value="{{ shopid.text }}" id="input-shopids{{ key }}-text" class="form-control" />
						<div class="col-sm-10">
							<label for="input-shopids{{ key }}-terms">{{ entry_shopids_terms }}</label>
							{% for tenorKey, tenor in installment_tenors %}
								<div class="form-control">
									{% if tenor.value not in shopid.tenors %}
										<input type="checkbox" name="payment_paymazonkbankinstdyn_installment_shopids[{{ key }}][terms][{{ tenorKey }}][value]" value="{{ tenor.value }}" />
										<input type="text" name="payment_paymazonkbankinstdyn_installment_shopids[{{ key }}][terms][{{ tenorKey }}][text]" value="{{ tenor.text }}" />
									{% else %}
										<input type="checkbox" name="payment_paymazonkbankinstdyn_installment_shopids[{{ key }}][terms][{{ tenorKey }}][value]" value="{{ tenor.value }}" checked="checked" />
										<input type="text" name="payment_paymazonkbankinstdyn_installment_shopids[{{ key }}][terms][{{ tenorKey }}][text]" value="{{ tenor.text }}" />
									{% endif %}
								</div>
							{% endfor %}
						</div>
					</div>
				{% endfor %}
				
				<div class="form-group v2_settings sensitive required">
					<label class="col-sm-2 control-label" for="input-expiry">{{ entry_expiry }}</label>
					<div class="col-sm-3">
						<input type="text" name="payment_paymazonkbankinstdyn_expiry_duration" placeholder="filled with number"  value="{{ payment_paymazonkbankinstdyn_expiry_duration }}" id="input-expiry" class="form-control" />
					</div>
					<div class="col-sm-3">
						<select name="payment_paymazonkbankinstdyn_expiry_unit" id="input-expiry-unit" class="form-control">
							{% for expire in expiry  %}
								{% if expire.unit == payment_paymazonkbankinstdyn_expiry_unit %}
									<option value="{{ expire.unit }}" selected="selected">{{ expire.unit }}</option>
								{% else %}
									<option value="{{ expire.unit }}">{{ expire.unit }}</option>
								{% endif %}
							{% endfor %}
						</select>
					</div>
				</div>
				<!-- custom expiry -->
				<div class="form-group">
					<label class="col-sm-2 control-label" for="input-custom-field">{{ entry_custom_field }}</label>
					<div class="col-sm-3">
						<input type="text" id="input-custom-field1" name="payment_paymazonkbankinstdyn_custom_field1" value="{{ payment_paymazonkbankinstdyn_custom_field1 }}" placeholder="{{ payment_paymazonkbankinstdyn_custom_field1 }}" class="form-control" />
					</div>
					<div class="col-sm-3">
						<input type="text" id="input-custom-field2" name="payment_paymazonkbankinstdyn_custom_field2" value="{{ payment_paymazonkbankinstdyn_custom_field2 }}" placeholder="{{ payment_paymazonkbankinstdyn_custom_field2 }}" class="form-control" />
					</div>
					<div class="col-sm-3">
						<input type="text" id="input-custom-field3" name="payment_paymazonkbankinstdyn_custom_field3" value="{{ payment_paymazonkbankinstdyn_custom_field3 }}" placeholder="{{ payment_paymazonkbankinstdyn_custom_field3 }}" class="form-control" />
					</div>
					<div class="col-sm-12"></div>
				</div>
				<!-- custom field -->
				<div class="form-group required">
					<label class="col-sm-2 control-label" for="input-currency-convertion">{{entry_currency_conversion}}</label>
					<div class="col-sm-3">
						<input type="text" id="input-currency-convertion" name="payment_paymazonkbankinstdyn_currency_conversion" value="{{ payment_paymazonkbankinstdyn_currency_conversion }}" placeholder="{{ payment_paymazonkbankinstdyn_currency_conversion }}" class="form-control" />
						<span>Set to 1 if your default currency is Thailand Baht</span>
					</div>
					<div class="col-sm-3">
						{%if error_currency_conversion %}
							<div class="col-sm-3">{{ error_currency_conversion }}</div>
						{% endif %}
					</div>
				</div>
				<!-- Currency -->
				<div class="form-group">
					<label class="col-sm-2 control-label" for="input-geo-zone">{{entry_geo_zone}}</label>
					<div class="col-sm-3">
						<select name="payment_paymazonkbankinstdyn_geo_zone_id" id="input-geo-zone" class="form-control">
							<option value="0">{{ text_all_zones }}</option>
							{% for geo_zone in geo_zones  %}
								{% if geo_zone.geo_zone_id == payment_paymazonkbankinstdyn_geo_zone_id %}
									<option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
								{% else %}
									<option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
								{% endif %}
							{% endfor %}
						</select>
					</div>
				</div>
				<!-- Geo Zone -->

				<div class="form-group">
					<label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
					<div class="col-sm-1">
						<input size="1" type="text" id="input-sort-order" name="payment_paymazonkbankinstdyn_sort_order" value="{{ payment_paymazonkbankinstdyn_sort_order }}" placeholder="{{ payment_paymazonkbankinstdyn_sort_order }}" class="form-control" />
					</div>
				</div>
	
				<div style="text-align:center;">
					<span style="font-size:x-small">version 1.2.1</span>
				</div>
			</form>
		</div>
	</div>
</div>		
<!-- content -->
</div>

{{ footer }} 